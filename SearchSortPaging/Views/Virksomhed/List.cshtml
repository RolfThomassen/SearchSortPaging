@using PagedList;
@using PagedList.Mvc;
@using GridMvc;
@model IEnumerable<SearchSortPaging.Models.vw_Co2Db_Virksomheder>

@{
  ViewBag.Title = "List";
}

<h2>List</h2>

<p>
