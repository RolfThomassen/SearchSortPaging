@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SearchSortPaging.Models.vw_Co2Db_Postnr>
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
  ViewBag.Title = "Postnr";
}

<h2>Postnr</h2>

@using (Html.BeginForm("Postnr", "System", FormMethod.Get))
{
  //the following are search options
  <b> Search Option: </b>
  @Html.RadioButton("option", "Postnr") <text>Postnr</text>
  @Html.RadioButton("option", "Bynavn") <text>Bynavn</text>
  @Html.RadioButton("option", "Land") <text>Land</text>
  @Html.TextBox("search") <input type="submit" name="submit" value="Search" />
}

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>@Html.ActionLink("Postnr", "Postnr", new { sort = ViewBag.SortByPostnr, option = Request.QueryString["option"], search = Request.QueryString["search"] })</th>
    <th>@Html.DisplayNameFor(model => model.First().Bynavn)</th>
    <th>@Html.ActionLink("Bynavn", "Postnr", new { sort = ViewBag.SortByCity, option = Request.QueryString["option"], search = Request.QueryString["search"] })</th>
    <th>@Html.DisplayNameFor(model => model.First().Gade)</th>
    <th>@Html.DisplayNameFor(model => model.First().Firma)</th>
    <th>@Html.DisplayNameFor(model => model.First().LandID)</th>
    <th>@Html.DisplayNameFor(model => model.First().Provins)</th>
    <th>@Html.DisplayNameFor(model => model.First().Land)</th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>@Html.DisplayFor(modelItem => item.Postnr)</td>
      <td>@Html.DisplayFor(modelItem => item.Bynavn)</td>
      <td>@Html.DisplayFor(modelItem => item.Gade)</td>
      <td>@Html.DisplayFor(modelItem => item.Firma)</td>
      <td>@Html.DisplayFor(modelItem => item.LandID)</td>
      <td>@Html.DisplayFor(modelItem => item.Provins)</td>
      <td>@Html.DisplayFor(modelItem => item.Land)</td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
      </td>
    </tr>
  }
</table>

@Html.PagedListPager(Model, pageNumber => Url.Action("Postnr", new {
  pageNumber,
  option = Request.QueryString["option"],
  search = Request.QueryString["search"],
  sort = Request.QueryString["sort"]
}))
